extends ../base

block content 
	div.pageTitle #{pageTitle}
	form(method="POST")
		input(name="title", placeholder="Product Title", value=product.title, required)
		textarea.form_des(placeholder="Description", required, name="description", minlength=10)=product.description
		select#form_select(name="period")
			option(value="") 경매 기간 연장
			option(value="1") 1 일
			option(value="2") 2 일
			option(value="20") 20 일
		select#form_select(name="category")
			option(value="") 카테고리 변경
			option(value="패션") 패션
			option(value="뷰티") 뷰티
			option(value="스포츠") 스포츠
			option(value="가구/인테리어") 가구/인테리어
			option(value="생활") 생활
			option(value="디지털") 디지털
			option(value="도서/취미") 도서/취미
			option(value="기타") 기타
		button.form_submit Save
		div.form_rarr_btn 
			a(href="delete") Delete &rarr;
