extends ../base

block content
	div.upload__container
		div.pageTitle=pageTitle
		if errorMessage
			span=errorMessage
		form(method="POST", enctype="multipart/form-data")
			label(for="photo") Photo File
			input(type="file", accept="image/*", required, id="photo", name="photo", multiple)
			input(placeholder="Title", required, type="text", name="title", maxlength=80)
			textarea.form_des(placeholder="Description", required, name="description", minlength=10)
			input(placeholder="Starting Price", required, type="number", name="startPrice")
			span.form_index ₩
			select#form_select(name="period", required)
				option(value="") 경매 기간 선택
				option(value="1") 1 일
				option(value="2") 2 일
				option(value="3") 3 일
				option(value="4") 4 일
			select#form_select(name="category", required)
				option(value="") 카테고리 선택
				option(value="패션") 패션
				option(value="뷰티") 뷰티
				option(value="스포츠") 스포츠
				option(value="가구/인테리어") 가구/인테리어
				option(value="생활") 생활
				option(value="디지털") 디지털
				option(value="도서/취미") 도서/취미
				option(value="기타") 기타
			button.form_submit Upload Product